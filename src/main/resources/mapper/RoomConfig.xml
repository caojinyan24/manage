    <!-- 查询条件 -->
    <sql id="wherecontation">
        <trim suffixOverrides=",">
            <if test="id != null and id != ''">
                AND rc.id = #{id}
            </if>
            <if test="city != null and city != ''">
                AND rc.city = #{city}
            </if>
            <if test="region != null and region != ''">
                AND rc.region = #{region}
