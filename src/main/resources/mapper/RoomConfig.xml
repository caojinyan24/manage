            <if test="layer != null and layer != ''">
                AND rc.layer = #{layer}
            </if>
            <if test="roomName != null and roomName != ''">
                AND rc.room_name = #{roomName}
            </if>
            <if test="validStatus != null and validStatus != ''">
                AND rc.valid_status = #{validStatus}
            </if>
            <if test="createTime != null and createTime != ''">
                AND rc.create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != ''">
                AND rc.update_time = #{updateTime}
            </if>
        </trim>
    </sql>

    <!--
	方法名称: insert
	调用路径: RoomConfig.insert
	-->
    <insert id="addConfig" parameterType="swa.manage.entity.RoomConfig">
        INSERT INTO room_config /* 配置表 */
        (
        city
        ,region
        ,layer
        ,room_name
        ,valid_status
        ,create_time
        ,update_time
        )
        values
        (
        #{city}
        ,#{region}
        ,#{layer}
        ,#{roomName}
        ,#{validStatus}
        ,#{createTime}
        ,#{updateTime}
        )
    </insert>


